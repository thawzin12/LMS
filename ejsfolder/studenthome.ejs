<!doctype html>
<html lang="en">
<!-- ... (Other head elements) -->

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="">
    <meta name="author" content="">

    <title>computer university home</title>
    <link rel="shortcut icon" href="/static/images/logo.avif" type="image/x-icon">


    <!-- CSS FILES -->
    <link rel="preconnect" href="https://fonts.googleapis.com">

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400&family=Sono:wght@200;300;400;500;700&display=swap"
        rel="stylesheet">

    <link rel="stylesheet" href="static/css/bootstrap.min.css">

    <link rel="stylesheet" href="static/css/bootstrap-icons.css">

    <link rel="stylesheet" href="static/css/owl.carousel.min.css">

    <link rel="stylesheet" href="static/css/owl.theme.default.min.css">

    <link href="static/css/templatemo-pod-talk.css" rel="stylesheet">
    <link rel="stylesheet" href="/static/css/studentcss.css">

</head>


<body>
    <main>
        <%- include('studentnavbar'); %>
        <section class="hero-section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-12">
                        <div class="text-center mb-5 pb-2">
                            <h1 class="text-white">Welcome to Our University</h1>
                            <p class="text-white">Our application will help you to improve your knowledge.</p>
                        </div>

                        <div class="owl-carousel owl-theme">
                            <% if (courses.length > 0) { %>
                            <% courses.forEach(course => { %>
                            <% if (course.course_code && course.course_name) { %>
                            <div class="owl-carousel-info-wrap item">
                                <form action="/course" method="POST">
                                    <input type="hidden" name="courseCode" value="<%= course.course_code %>">
                                    <button type="submit" class="btn btn-primary w-100 p-0 border-0 bg-transparent">

                                        <img src="/static/images/<%= course.course_code %>.jpg"
                                            class="owl-carousel-image img-fluid" alt="<%= course.course_name %>"
                                            style='height:400px;'>
                                        <div class="owl-carousel-info mt-2">
                                            <h5 class="mb-2">
                                                <%= course.course_code %>
                                                Go to <%= course.course_name %>
                                                <img src="static/images/verified.png"
                                                    class="owl-carousel-verified-image img-fluid" alt="">
                                            </h5>
                                            <span class="badge">Course</span>
                                        </div>
                                    </button>
                                </form>
                            </div>
                            <% } %>
                            <% }) %>
                            <% } else { %>
                            <div class="text-white">
                                <p>No courses available for your current semester and section.</p>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <%- include('moretopic'); %>
    </main>

    <%- include('studentfooter') %>
    <script src="static/js/jquery.min.js"></script>
    <script src="static/js/bootstrap.bundle.min.js"></script>
    <script src="static/js/owl.carousel.min.js"></script>
    <script src="static/js/custom.js"></script>
</body>

</html>