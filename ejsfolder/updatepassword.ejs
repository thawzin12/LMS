<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Password</title>
    <link rel="stylesheet" href="/static/css/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/static/fontawesome/css/all.min.css">

    <link rel="shortcut icon" href="static/images/logo.avif" type="image/x-icon">
    <link rel="stylesheet" href="/static/css/bootstrap.min.css">

    <style>
        body {
            padding: 0;
            margin: 0;
            background-image: url(/static/images/bk.jpg);
            background-size: cover;
            background-position: center;
        }

        .container {
            padding-top: 50px;
        }

        .input-group-text {
            cursor: pointer;
        }
    </style>
</head>

<body class="bg-success-subtle">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
                <div class="inn-title my-5 text-center">
                    <h4>Do you want to change Password?</h4>
                </div>
                <div class="tab-inn">

                    <form action="updatepassword" method="post">
                        <div class="mb-3">
                            <label for="currentPassword" class="form-label">Current Password</label>
                            <div class="input-group">
                                <input type="password" id="currentPassword" class="form-control" name="currentPassword"
                                    minlength="8" maxlength="16" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                                    value="<%=data.currentPassword || ''%>" required>
                                <span class="input-group-text" id="toggleCurrentPassword">
                                    <i class="fas fa-eye"></i>
                                </span>
                            </div>
                            <span class="text-danger">
                                <%=errors.current%>
                            </span>
                        </div>
                        <div class="mb-3">
                            <label for="newPassword" class="form-label">New Password</label>
                            <div class="input-group">
                                <input type="password" id="newPassword" class="form-control" name="newPassword"
                                    minlength="8" maxlength="16" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                                    value="<%=data.newPassword || ''%>" required>
                                <span class="input-group-text" id="toggleNewPassword">
                                    <i class="fas fa-eye"></i>
                                </span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="retypePassword" class="form-label">Confirm Password</label>
                            <div class="input-group">
                                <input type="password" id="retypePassword" class="form-control" name="retypePassword"
                                    minlength="8" maxlength="16" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                                    value="<%=data.retypePassword || ''%>" required>
                                <span class="input-group-text" id="toggleRetypePassword">
                                    <i class="fas fa-eye"></i>
                                </span>
                            </div>
                            <span class="text-danger">
                                <%=errors.retype%>
                            </span>
                        </div>
                        <div class="mt-4 text-center">
                            <button type="submit" class="btn btn-primary">CONFIRM</button>
                        </div>
                        <div class="m-3 text-center">
                            <button class="btn btn-success"><a href="/studenthome" class='text-white'
                                    style='text-decoration: none;'>Home</a></button>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>

    <script src="/static/js/jquery.min.js"></script>
    <script src="/static/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            function togglePasswordVisibility(toggleButtonId, passwordFieldId) {
                const toggleButton = $(toggleButtonId);
                const passwordField = $(passwordFieldId);

                toggleButton.on('click', function () {
                    const type = passwordField.attr('type') === 'password' ? 'text' : 'password';
                    passwordField.attr('type', type);

                    // Toggle the icon class
                    toggleButton.find('i').toggleClass('fa-eye fa-eye-slash');
                });
            }

            togglePasswordVisibility('#toggleCurrentPassword', '#currentPassword');
            togglePasswordVisibility('#toggleNewPassword', '#newPassword');
            togglePasswordVisibility('#toggleRetypePassword', '#retypePassword');
        });
    </script>
</body>

</html>