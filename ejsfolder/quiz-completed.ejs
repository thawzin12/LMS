<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz Completed</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>

<body>
    <!-- Hidden form to submit courseCode via POST -->
    <form id="courseForm" action="/course" method="POST" style="display: none;">
        <input type="hidden" name="courseCode" id="courseCode" value="<%= courseCode %>">
    </form>

    <script>
        // Get the courseCode from the hidden input field
        const courseCode = document.getElementById('courseCode').value;
        console.log('course_code from quizcomplete', courseCode); // Check the courseCode value

        Swal.fire({
            title: 'Quiz Already Completed',
            text: 'You have already completed this quiz.',
            icon: 'info',
            confirmButtonText: 'Go back to course'
        }).then(() => {
            if (courseCode) {
                // Submit the form via POST to /course
                document.getElementById('courseForm').submit();
            } else {
                console.error('courseCode is not defined');
            }
        });
    </script>
</body>

</html>